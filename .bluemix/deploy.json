{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Compute Options",
  "description": "",
  "longDescription": "The Delivery Pipeline automates the continuous deployment of OpenWhisk Dark Vision including its web user interface and the OpenWhisk artifacts.",
  "type": "object",
  "properties": {
    "compute-options-region": {
      "description": "The bluemix region",
      "type": "string"
    },
    "compute-options-organization": {
      "description": "The bluemix org",
      "type": "string"
    },
    "compute-options-space": {
      "description": "The bluemix space",
      "type": "string"
    },
    "compute-options-app-name": {
      "description": "The name of the web application.",
      "type": "string"
    },
    "compute-options-admin-username": {
      "description": "The admin username",
      "type": "string"
    },
    "compute-options-admin-password": {
      "description": "The admin password",
      "type": "string"
    },
    "compute-options-watson-api-key": {
      "description": "An existing Visual Recognition API key. Leave it empty to have the toolchain create a new service instance automatically.",
      "type": "string"
    },
    "compute-options-cloudant-db": {
      "description": "Name of the database used by Dark Vision in the Cloudant service instance.",
      "type": "string"
    }
  },
  "required": ["compute-options-region", "compute-options-organization", "compute-options-space", "compute-options-app-name", "compute-options-cloudant-db"],
  "form": [{
      "type": "validator",
      "url": "/devops/setup/bm-helper/helper.html"
    },
    {
      "type": "table",
      "columnCount": 3,
      "widths": ["33%", "33%", "33%"],
      "items": [
        {
          "type": "label",
          "title": "Region"
        },
        {
          "type": "label",
          "title": "Organization"
        },
        {
          "type": "label",
          "title": "Space"
        },
        {
          "type": "select",
          "key": "compute-options-region"
        },
        {
          "type": "select",
          "key": "compute-options-organization"
        },
        {
          "type": "select",
          "key": "compute-options-space",
          "readonly": false
        }
      ]
    },
    {
      "type": "text",
      "readonly": false,
      "title": "App name",
      "key": "compute-options-app-name"
    },
    {
      "type": "text",
      "readonly": false,
      "title": "Admin username (used to prevent anonymous uploads, leave empty to allow uploads from any visitor)",
      "key": "compute-options-admin-username"
    },
    {
      "type": "text",
      "readonly": false,
      "title": "Admin password",
      "key": "compute-options-admin-password"
    },
    {
      "type": "text",
      "readonly": false,
      "title": "Watson Visual Recognition API key (leave it empty to provision a new service)",
      "key": "compute-options-watson-api-key"
    },
    {
      "type": "text",
      "readonly": false,
      "title": "Name of the database in the Cloudant service instance",
      "key": "compute-options-cloudant-db"
    }
  ]
}
